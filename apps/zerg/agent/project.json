{
  "name": "zerg-agent",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/zerg/agent",
  "targets": {
    "lock": {
      "executor": "@nxlv/python:lock",
      "options": {
        "update": false
      }
    },
    "sync": {
      "executor": "@nxlv/python:sync",
      "options": {}
    },
    "add": {
      "executor": "@nxlv/python:add",
      "options": {}
    },
    "update": {
      "executor": "@nxlv/python:update",
      "options": {}
    },
    "remove": {
      "executor": "@nxlv/python:remove",
      "options": {}
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": [
        "{projectRoot}/dist"
      ],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": [
          "src"
        ]
      },
      "cache": true
    },
    "format": {
      "executor": "@nxlv/python:ruff-format",
      "outputs": [],
      "options": {
        "filePatterns": [
          "src"
        ]
      },
      "cache": true
    },
    "test:unit": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/{projectRoot}/unittests",
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "command": "uv run pytest tests/unit_tests/",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "test:integration": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/{projectRoot}/integrationtests",
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "command": "uv run pytest tests/integration_tests/",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "install": {
      "executor": "@nxlv/python:install",
      "options": {
        "silent": false,
        "args": "",
        "verbose": false,
        "debug": false
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "push": true,
        "file": "./langgraph.Dockerfile",
        "context": ".",
        "build-args": [
          "APP_NAME=zerg/agent"
        ],
        "metadata": {
          "images": [
            "yurikrupnik/zerg-agent"
          ],
          "tags": [
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=semver,pattern={{version}}",
            "type=sha"
          ]
        }
      }
    },
    "trivy": {
      "executor": "nx:run-commands",
      "dependsOn": ["container"],
      "options": {
        "commands": [
          "export SHORT_SHA=$(echo ${GITHUB_SHA:-dev} | cut -c1-7)",
          "echo 'Scanning container image for vulnerabilities...'",
          "trivy image --format table --severity HIGH,CRITICAL yurikrupnik/zerg-agent:$SHORT_SHA"
        ],
        "parallel": false
      },
      "configurations": {
        "production": {
          "commands": [
            "export SHORT_SHA=$(echo ${GITHUB_SHA:-dev} | cut -c1-7)",
            "echo 'Scanning container image for vulnerabilities...'",
            "trivy image --format table --severity HIGH,CRITICAL --exit-code 1 yurikrupnik/zerg-agent:$SHORT_SHA"
          ]
        },
        "tag": {
          "commands": [
            "export SHORT_SHA=$(echo ${GITHUB_SHA:-dev} | cut -c1-7)",
            "echo 'Scanning container image for vulnerabilities...'",
            "trivy image --format table --severity HIGH,CRITICAL --exit-code 1 yurikrupnik/zerg-agent:$SHORT_SHA"
          ]
        }
      }
    }
  },
  "tags": [],
  "release": {
    "version": {
      "generator": "@nxlv/python:release-version"
    }
  }
}
